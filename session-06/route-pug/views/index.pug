html
  head
    title= title
  body
    h3= message

    a(href="/") Daftar Peserta
    a(href="/tambah") Tambah Peserta

    hr

    h3 Daftar Peserta
    table(style="width: 50%;", border="true")
      thead 
        tr 
          th No
          th Nama
          th Action
      tbody
        if data.length > 0
          - var i=0;
          each peserta in data
            tr
              td #{++i}
              td #{peserta.nama}
              td
                a(href="/delete/"+i) Hapus
